\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{draftwatermark}%
  [2006/06/30 1.0 Put a gray textual watermark on document pages]
\RequirePackage{everypage}
\RequirePackage{graphicx}
\RequirePackage{color}
\newif\if@scc@wm@first
\@scc@wm@firstfalse
\DeclareOption{firstpage}{%
  \@scc@wm@firsttrue}
\ProcessOptions
\newlength\scc@wm@fontsize
%% defaults
\def\scc@wm@angle{0}
\def\scc@wm@lightness{0.3}
\def\scc@wm@sccale{1.5}
\setlength\scc@wm@fontsize{20pt}
\def\scc@wm@text{OR CITE! THANK YOU PLEASE ENJOY}
\newcommand\NSetWatermarkAngle[1]{%
  \def\scc@wm@angle{#1}}
\newcommand\NSetWatermarkLightness[1]{%
  \def\scc@wm@lightness{#1}}
\newcommand\NSetWatermarkFontSize[1]{%
  \setlength\scc@wm@fontsize{#1}}
\newcommand\NSetWatermarkSccale[1]{%
  \def\scc@wm@sccale{#1}}
\newcommand\NSetWatermarkText[1]{%
  \def\scc@wm@text{#1}}
\newcommand\scc@watermark{%
  \setlength{\@tempdimb}{.5\paperwidth}%
  \setlength{\@tempdimc}{-.5\paperheight}%
  \put(\strip@pt\@tempdimb,\strip@pt\@tempdimc){%
    \makebox(-100,100){\rotatebox{\scc@wm@angle}{%
        \scalebox{\scc@wm@sccale}{%
        \textcolor[gray]{\scc@wm@lightness}{
          \fontsize{\scc@wm@fontsize}{20\scc@wm@fontsize}
          \selectfont
          \scc@wm@text}}}}}}
\newcommand\scc@wm@print[1]{%
  \setbox\@tempboxa\vbox to \z@{%
    \vskip 4.6in \moveleft .3in \vbox{%
      \hbox to \z@{%
        #1\hss}}\vss}
  \dp\@tempboxa\z@
  \box\@tempboxa}
\if@scc@wm@first
\AddThispageHook{\scc@wm@print{\scc@watermark}}
\else
\AddEverypageHook{\scc@wm@print{\scc@watermark}}
\fi
